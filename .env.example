# Factory Action Console - Environment Configuration

# App Settings
DEBUG=false

# Database Configuration
# Use "sqlite" for local development or "postgresql" for production
DB_TYPE=sqlite

# PostgreSQL credentials (only needed if DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=factory_console
DB_USER=your_username
DB_PASSWORD=your_password

# OpenAI API Key (required for Vision LLM detection)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o

# Video Settings
DEFAULT_FPS=15
MJPEG_QUALITY=70
FRAME_WIDTH=1280
FRAME_HEIGHT=720

# Detection Settings
DETECTION_INTERVAL_MS=1500
CONFIDENCE_THRESHOLD=0.6
CONSECUTIVE_FRAMES_REQUIRED=2

# Ring Buffer (for video clip saving)
RING_BUFFER_DURATION_SEC=30
CLIP_BEFORE_SEC=10
CLIP_AFTER_SEC=10
